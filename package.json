{
  "name": "mina-payouts-data-provider",
  "version": "2.6.10",
  "description": "Data provider API for mina-pool-payouts",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc --outDir dist",
    "dev": "nodemon --watch src --ext ts --exec \"npm run build && node dist/index.js\" | pino-pretty",
    "dev-sl": "nodemon --watch src --ext ts --exec \"npm run build && node dist/index.js\" | pino-pretty",
    "lint": "eslint '*/**/*.{js,ts}' --quiet --fix",
    "test": "dotenv -e tests/.env.test -- vitest run",
    "test:watch": "npm run build && dotenv -e tests/.env.test -- vitest",
    "test:coverage": "npm run build && dotenv -e tests/.env.test -- vitest run --coverage",
    "test:integration": "dotenv -e tests/.env.test.integration -- vitest run --config vitest.config.integration.ts",
    "test:integration:watch": "dotenv -e tests/.env.test.integration -- vitest --config vitest.config.integration.ts",
    "test:db:start": "bash tests/start-test-databases.sh",
    "test:db:stop": "bash -c 'if command -v docker-compose &> /dev/null; then docker-compose -f docker-compose.test.yml down; else docker compose -f docker-compose.test.yml down; fi'",
    "test:db:reload": "bash tests/reload-test-databases.sh",
    "test:db:refresh": "bash -c 'if command -v docker-compose &> /dev/null; then docker-compose -f docker-compose.test.yml down -v; else docker compose -f docker-compose.test.yml down -v; fi' && bash tests/start-test-databases.sh"
  },
  "keywords": [],
  "author": "jrwashburn,pabloabadcarmona",
  "license": "Apache-2.0",
  "dependencies": {
    "@apollo/client": "^4.0.7",
    "cors": "^2.8.5",
    "decimal.js": "^10.5.0",
    "dotenv": "^17.2.3",
    "express": "5.2.0",
    "express-basic-auth": "^1.2.1",
    "express-rate-limit": "^8.1.0",
    "graphql": "^16.11.0",
    "helmet": "^8.1.0",
    "multer": "^2.0.0",
    "node-cron": "^4.0.7",
    "pg": "^8.15.6",
    "pino": "^9.7.0",
    "pino-http": "^10.4.0",
    "response-time": "^2.3.3",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.2",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.14",
    "@types/response-time": "^2.3.8",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "@vitest/ui": "^4.0.14",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.25.1",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.0.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.32.1",
    "vitest": "^4.0.14"
  }
}