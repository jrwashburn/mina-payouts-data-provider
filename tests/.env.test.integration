# Integration Test Environment
# Use this when running with real PostgreSQL databases

NUM_SLOTS_IN_EPOCH=7140
API_PORT=0
NODE_ENV=test
LOG_LEVEL=silent

# Fork configuration for integration tests
# Set FORK_1_START_SLOT very high so all test data falls into Fork 0 by default
# (test database likely has blocks from early epochs, slots 0-50000)
FORK_1_START_SLOT=564480
FORK_2_START_SLOT=0

# Mock credentials for ledger uploads
LEDGER_UPLOAD_API_USER=test-user
LEDGER_UPLOAD_API_PASSWORD=test-password

# Block Archive Database Query (read-only)
BLOCK_DB_QUERY_USER=postgres
BLOCK_DB_QUERY_PASSWORD=postgres
BLOCK_DB_QUERY_HOST=localhost
BLOCK_DB_QUERY_PORT=5433
BLOCK_DB_QUERY_NAME=archive
BLOCK_DB_QUERY_REQUIRE_SSL=false

# Staking Ledger Database Query (read-only)
LEDGER_DB_QUERY_USER=postgres
LEDGER_DB_QUERY_PASSWORD=postgres
LEDGER_DB_QUERY_HOST=localhost
LEDGER_DB_QUERY_PORT=5434
LEDGER_DB_QUERY_NAME=stakes
LEDGER_DB_QUERY_REQUIRE_SSL=false

# Staking Ledger Database Command (read/write)
LEDGER_DB_COMMAND_USER=postgres
LEDGER_DB_COMMAND_PASSWORD=postgres
LEDGER_DB_COMMAND_HOST=localhost
LEDGER_DB_COMMAND_PORT=5434
LEDGER_DB_COMMAND_NAME=stakes
LEDGER_DB_COMMAND_REQUIRE_SSL=false

# External nodes for consensus checking (not used in tests, but required)
CHECK_NODES=http://localhost:3001

# Archive recency check schedule
ARCHIVE_RECENCY_CRON_SCHEDULE="0 */2 * * * *"
